@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}
<div>
    <a class="btn btn-info rounded rounded-3 mt-2 me-2" asp-action="Create">
        Add Product
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No Produst!</h4>
        <p class="mb-0">No Products were added yet.</p>
    </div>
}
else
{
    <div class="mt-5">
        <table class="table table-bordered border-success">
            <tbody>
                <tr>
                    <td>
                        <h4>Product</h4>
                    </td>
                    <td>
                        <h4>Price</h4>
                    </td>
                    <td>
                        <h4>Edit</h4>
                    </td>
                </tr>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            <h4 class="text">@product.Name</h4>
                        </td>
                        <td>
                            <h5>@product.Price</h5>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-info rounded rounded-3 me-2" asp-action="Edit" asp-route-id="@product.Id">
                                    Edit
                            </a>
                            <a href="javascript:;" class="btn btn-danger rounded rounded-3 js-delete" data-id="@product.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
}

@section scripts
{
    <script src="~/js/product-index.js" asp-append-version="true"></script>
}