@model Customer
@{
    ViewData["Title"] = "Customer";
}

<h1>Welcome</h1>

<form asp-controller="Customer">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Id" class="form-label mt-4"></label>
                <input readonly type="text" class="form-control" asp-for="Id" placeholder="Id">
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="form-label mt-4"></label>
                <input readonly type="text" class="form-control" asp-for="Code" placeholder="Code">
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfRegistration" class="form-label mt-4"></label>
                <input readonly type="text" class="form-control" asp-for="DateOfRegistration" placeholder="Date Of Registration">
                <span asp-validation-for="DateOfRegistration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input readonly type="text" class="form-control" asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <a class="btn btn-info rounded rounded-3 mt-3" asp-action="Edit" asp-route-id="@Model.Id">
                Edit
            </a>
        </div>
    </div>
</form>

